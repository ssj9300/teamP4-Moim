<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetActivity">

    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/buttonBackToHome"
                android:layout_width="30dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_back" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="left|center_vertical"
                android:text="홈화면으로가기"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="363dp"
                        android:layout_height="match_parent"
                        android:gravity="center|top"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewToEdit"
                            android:layout_width="190dp"
                            android:layout_height="162dp"
                            app:srcCompat="@drawable/anom" />

                        <TextView
                            android:id="@+id/textViewName_set"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Joseph"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="match_parent"
                            android:layout_height="33dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="20"
                                android:gravity="center_vertical"
                                android:text="개인정보수정"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                            <Button
                                android:id="@+id/buttonToEdit"
                                android:layout_width="35dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/arrow_b" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/textVailed" />

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="match_parent"
                            android:layout_height="35dp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="앱정보"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="323dp"
                            android:background="@drawable/explain_appinfo" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="앱소개"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="207dp"
                            android:background="@drawable/explain_appintro" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="36dp" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/button_logoff"
                            android:layout_width="253dp"
                            android:layout_height="wrap_content"
                            android:background="@color/mainColor"
                            android:text="로그아웃"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@color/pureWhite" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="match_parent"
                            android:layout_height="156dp" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/buttonBackToSet"
                android:layout_width="30dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_back" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="left|center_vertical"
                android:text="설정으로 가기"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="376dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:paddingLeft="50dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="@color/textVailed" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="50dp"
                            android:text="모임만들기"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="@color/textVailed" />

                        <ImageView
                            android:id="@+id/imageViewFace"
                            android:layout_width="194dp"
                            android:layout_height="158dp"
                            app:srcCompat="@drawable/anom" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editTextName"
                                android:layout_width="224dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="이름"
                                android:inputType="textPersonName"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                            <RadioGroup
                                android:id="@+id/radioGroupGen"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radioButtonMail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="남자"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                                <RadioButton
                                    android:id="@+id/radioButtonFemale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="여자"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editTextDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="생년월일"
                                android:inputType="date"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                            <EditText
                                android:id="@+id/editTextLoca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:hint="사는곳"
                                android:inputType="textPersonName"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <EditText
                            android:id="@+id/editTextIntro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="간단한 자기소개"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|top"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/buttonSave"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:background="@color/mainColor"
                                android:text="모임 만들기"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="@color/pureWhite" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>